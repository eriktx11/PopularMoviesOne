    android:layout_height="match_parent"
    android:id="@+id/Main600Layout"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    tools:context="com.example.android.popularmoviesone.MainGrid">

    <fragment
        android:id="@+id/fragment_forecast"
        android:name="com.example.android.popularmoviesone.ForecastFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        tools:layout="@android:layout/simple_gallery_item" />


    <fragment
        android:id="@+id/detail_fragment"
        android:name="com.example.android.popularmoviesone.DetailFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        tools:layout="@android:layout/simple_gallery_item" />





